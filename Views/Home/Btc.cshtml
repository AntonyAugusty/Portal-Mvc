

@{
    ViewBag.Title = "Btc";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div id="page-wrapper">
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12 ">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Update Bitcoin </h3>
                    </div>
                    <div class="panel-body">

                        <div class="page-wrapper">
                            <div class="col-md-8 col-md-offset-2">
                                <div class="alert alert-info hidden">
                                    <p></p>
                                </div>
                                <div class="well">
                                    Update Bitcoin Address
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Bitcoin Address<span class="symbol required"></span></label>
                                    <div class="col-sm-7">

                                        <span id="Span1"></span>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-sm-3 control-label">

                                        <span class="symbol required"></span>
                                    </label>
                                    <div class="col-sm-7">

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-7" style="margin-top:10px">
                                        <button class="btn btn-primary btn-block btn-flat" (click)="UserLogin(UserName.value,userpassword.value)">Login</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- /.row -->
        </div>
    </div>
}
